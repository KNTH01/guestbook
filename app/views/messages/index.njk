{% if user %}
  <h3>Submit a message</h3>
  <form action="/messages/post" method="post">
      <label for="messageContent">Message</label>
      <textarea name="content" id="messageContent"></textarea>
      <button type="submit" class="button">Send</button>
  </form>

  <div class="Comment">
    <h4>Comments</h4>
    <div class="medium-12 columns">
      {% for message in messages %}
        <div class="row callout">
          <div class="medium-1 columns">
            <a href="/message/{{ message.id }}">
              <img class="CommentThumbnail thumbnail" src="assets/images/user.png" />
            </a>
          </div>
          <div class="medium-11 columns">
            <div class="Comment-metadata">
              <span class="Comment-date">{{ message.createdAt }}</span>
              <a href="#" class="Comment-author">{{ message.user.fullName }}</a>
            </div>
            <div class="text">{{ message.content }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}
